@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>客戶資料</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.客戶名稱)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.客戶名稱)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.統一編號)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.統一編號)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.電話)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.電話)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.傳真)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.傳真)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.地址)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.地址)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

    </dl>
</div>


<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>客戶聯絡人</h4>
        @{
            //todo：過濾掉被刪除的資料，此邏輯應該寫在 Model 比較合適
            var contact = Model.客戶聯絡人.Where(x => !x.IsDelete).ToArray();
        }
        <table class="table">
            <tr>
                <th>
                    刪除
                </th>
                <th>
                    職稱
                </th>
                <th>
                    姓名
                </th>
                <th>
                    Email
                </th>
                <th>
                    手機
                </th>
                <th>
                    電話
                </th>
                <th></th>
            </tr>
            
            @for( var i = 0; i < contact.Length; i++ )
            {
                <tr>
                    <td>
                        @Html.HiddenFor(modelItem => contact[i].Id)
                        @Html.CheckBoxFor(modelItem => contact[i].IsDelete)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => contact[i].職稱)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => contact[i].姓名)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => contact[i].Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => contact[i].手機)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => contact[i].電話)
                    </td>
                </tr>
            }

        </table>


        <hr />


        <h4>客戶銀行資訊</h4>
        @{
            var bank = Model.客戶銀行資訊.Where(x => !x.IsDelete).ToArray();
        }
        <table class="table">
            <tr>
                <th>
                    刪除
                </th>
                <th>
                    銀行名稱
                </th>
                <th>
                    銀行代碼
                </th>
                <th>
                    分行代碼
                </th>
                <th>
                    帳戶名稱
                </th>
                <th>
                    帳戶號碼
                </th>
                <th></th>
            </tr>
            
            @for( var i = 0; i < bank.Length; i++ )
            {
                <tr>
                    <td>
                        @Html.HiddenFor(modelItem => bank[i].Id)
                        @Html.CheckBoxFor(modelItem => bank[i].IsDelete)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => bank[i].銀行名稱)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => bank[i].銀行代碼)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => bank[i].分行代碼)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => bank[i].帳戶名稱)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => bank[i].帳戶號碼)
                    </td>
                </tr>
            }

        </table>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="刪除" class="btn btn-default" />
            </div>
        </div>
    </div>
}


